@page "/"

<div class="container py-4">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <UpdatePeople UpdatePeopleList="UpdateList" />
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <SurveyPrompt Title="People List" />
            @if(peoples is null)
            {
                <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <table class="table-hover table-bordered table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var people in peoples)
                                {
                                    <tr>
                                        <td>@people.Id</td>
                                        <td>@people.Name</td>
                                        <td>@people.Mobile</td>
                                        <td>@people.Email</td>
                                        <td>@people.Address</td>
                                        <td>
                                            <button @onclick="() => DeleteUser(people.Id)" class="btn btn-outline-danger btn-sm" title="Delete">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

